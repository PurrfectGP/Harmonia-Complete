# === Harmonia V3 Environment Variables ===

# --- AI/ML API Keys ---
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# --- Gemini Model Chain ---
GEMINI_MODEL_PRIMARY=gemini-3-pro-preview
GEMINI_MODEL_FALLBACK=gemini-3-flash-preview
GEMINI_MODEL_STABLE=gemini-2.5-flash

# --- Database ---
DATABASE_URL=postgresql+asyncpg://harmonia_user:dev@localhost:5432/harmonia
DB_USER=harmonia_user
DB_PASSWORD=dev
DB_NAME=harmonia

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Security ---
FERNET_KEY=generate-with-python-c-from-cryptography.fernet-import-Fernet-print(Fernet.generate_key().decode())

# --- MetaFBP Model Paths ---
METAFBP_EXTRACTOR_PATH=models/universal_extractor.pth
METAFBP_GENERATOR_PATH=models/meta_generator.pth
FEATURE_DIM=512
INNER_LOOP_STEPS=5
INNER_LR=0.01
ADAPTATION_STRENGTH_LAMBDA=0.01

# --- Matching Weights ---
VISUAL_WEIGHT=0.4
PERSONALITY_WEIGHT=0.3
HLA_WEIGHT=0.3

# --- Google Cloud Platform ---
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west2
GCS_BUCKET_NAME=your-project-id-harmonia-v3
CLOUD_SQL_INSTANCE_CONNECTION=project:region:instance
CLOUD_SQL_USE_UNIX_SOCKET=false
GCS_MODEL_WEIGHTS_PREFIX=models/

# --- Application ---
ENVIRONMENT=development
LOG_LEVEL=INFO
ALLOWED_ORIGINS=*
